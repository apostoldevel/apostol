{
  "_comment": "Apostol configuration",
  "prefix": "/etc/apostol/",
  "locale": "en_US.UTF-8",
  "log": {
    "level": "debug",
    "file": "logs/error.log",
    "access": "logs/access.log",
    "stream": "logs/stream.log",
    "postgres": "logs/postgres.log"
  },
  "daemon": {
    "enabled": false,
    "pid": "logs/apostol.pid",
    "lock": "logs/apostol.lock"
  },
  "process": {
    "master": true,
    "helper": true,
    "user": "nobody",
    "group": "nogroup"
  },
  "workers": 1,
  "server": {
    "listen": "127.0.0.1",
    "port": 4977,
    "backlog": 128,
    "timeout": 5000,
    "root": "www"
  },
  "module": {
    "heartbeat": {
      "enable": true
    },
    "WebServer": {
      "enable": true
    },
    "PGHTTP": {
      "enable": true,
      "endpoints": ["/api/*"]
    },
    "PGFetch": {
      "enable": true,
      "timeout": 30
    }
  },
  "postgres": {
    "connect": false,
    "notice": false,
    "timeout": 10,
    "worker": {
      "host": "postgres",
      "port": "5432",
      "dbname": "web",
      "user": "http",
      "password": "http",
      "sslmode": "disable"
    },
    "helper": {
      "user": "http",
      "password": "http"
    },
    "pool": {
      "min": 5,
      "max": 10
    }
  }
}
